<div class="card p-4">
  <h1 class="text-center"><%= @company.name %></h1>
</div>

<div class="mt-3 text-center">
  <%= link_to 'Edit', edit_company_path(@company), class: "btn btn-warning" %>
  <%= link_to 'Back', companies_path, class: "btn btn-secondary" %>
</div>

<div class="mt-3 d-flex justify-content-between align-items-center">
  <h2>Users</h2>
  <%= link_to 'New User', new_company_user_path(@company), class: "btn btn-primary" %>
</div>

<div class="mt-3">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Display Name</th>
        <th>Email</th>
        <th>Username</th>
      </tr>
    </thead>
    <tbody>
      <% @company.users.each_with_index do |user, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= user.display_name %></td>
          <td><%= user.email %></td>
          <td><%= user.username %></td>          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
