<h1 class="text-center">New User for <%= @company.name %></h1>

<div class="card p-4">
  <%= form_with(model: [@company, @user], local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :display_name, class: "form-label" %>
      <%= form.text_field :display_name, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :username, class: "form-label" %>
      <%= form.text_field :username, class: "form-control", required: true %>
    </div>

    <div class="d-flex justify-content-between">
      <%= form.submit 'Create User', class: "btn btn-primary" %>
      <%= link_to 'Back', company_path(@company), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>